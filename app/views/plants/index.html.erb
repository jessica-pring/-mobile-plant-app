<div class="container">
  <h2 class="text-center mt-2">Browse all plants</h2>

  <div class="card-container">
    <div class="row">
      <% @plants.each do |plant| %>
        <div class="col-xs-4 col-sm-6 col-md-6 col-lg-4 my-2">
          <%= link_to plant_path(plant), class: 'card p-2' do %>
            <img src="<%= plant.image_url %>" alt="<%= plant.name %>" style="width: 100%; height: 250px; object-fit: cover">

            <div class="card-info pt-2">
              <h4><%= plant.name %></h4>
              <h6><%= plant.latin %></h6>
              <p><%= plant.description.truncate(100, separator: /\s/) %></p>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>
