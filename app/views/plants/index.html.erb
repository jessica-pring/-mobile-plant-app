<div class="container">
  <h2>Browse all plants</h2>

  <div class="card-container">
    <div class="row">
      <% @plants.each do |plant| %>
        <div class="col-sm-4 col-md-6 col-lg-4">
          <h4><%= plant.name %></h4>
          <h6><%= plant.latin %></h6>
          <p><%= plant.description.truncate(100, separator: /\s/) %></p>
        </div>
      <% end %>
    </div>
  </div>
</div>