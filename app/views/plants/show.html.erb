<div class="container">
  <h2 class="text-center mt-2"><%= @plant.name %></h2>

  <div class="row">
    <div class="img col-sm-12 col-md-6 text-center mb-2">
      <img src="<%= @plant.image_url %>" alt="<%= @plant.name %>">
    </div>

    <div class="info col-sm-12 col-md-6">
      <h4><%= @plant.latin %></h4>
      <p><%= @plant.description %></p>
    </div>
  </div>
</div>